@model AcunMedyaCafe.Models.RegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Kayıt Ol</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="~/Login_v16/images/icons/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="~/Login_v16/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Login_v16/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Login_v16/vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Login_v16/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="~/Login_v16/vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/Login_v166/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Login_v1/css/main.css">
    <style>
        .container-login100 {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }
        .wrap-login100 {
            width: 100%;
            max-width: 400px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            padding: 40px;
            border-radius: 10px;
            background: #fff;
        }
    </style>
</head>
<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form class="login100-form validate-form" method="post">
                    <span class="login100-form-title">
                        Kayıt Ol
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Kullanıcı adı gereklidir">
                        <input class="input100" type="text" name="Username" placeholder="Kullanıcı Adı">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-user-circle" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Şifre gerekli">
                        <input class="input100" type="password" name="Password" placeholder="Şifre">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Kayıt Ol
                        </button>
                    </div>

                    <div class="text-center p-t-12">
                        <span class="txt1">
                            @if (ViewBag.ErrorMessage != null)
                            {
                                <br />
                                <h6><i class="la la-exclamation"></i>Hata: <b>@ViewBag.ErrorMessage</b></h6>
                                <br />
                            }
                        </span>
                    </div>
                    <div class="text-center p-t-136">
                        <a class="txt2" href="@Url.Action("Index", "Login")">
                            Zaten hesabın var mı? Giriş yap!
                            <i class="fa fa-long-arrow-left m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/Login_v16/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/Login_v16/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Login_v16/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Login_v16/vendor/select2/select2.min.js"></script>
    <script src="~/Login_v16/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <script src="~/Login_v16/js/main.js"></script>
</body>
</html>