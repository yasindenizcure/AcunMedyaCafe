@model List<AcunMedyaCafe.Entities.Address>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Adres Tablosu </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Tablo</a></li>
                <li class="breadcrumb-item active" aria-current="page">Adres</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Haftaiçi Saatler</th>
                                <th>Haftasonu Saatler</th>
                                <th>Telefon Numarası</th>
                                <th>Güncelle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.WeekdayHours</td>
                                    <td>@item.WeekendHours</td>
                                    <td>@item.PhoneNumber</td>
                                    <td><a href="/Address/UpdateAddress/@item.AddressId" class="badge badge-info">Güncelle</a></td>
                                    <td><a href="/Address/DeleteAddress/@item.AddressId" class="badge badge-danger">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    <a href="/Address/AddAddress" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Yeni Adres</a>
                </div>
            </div>
        </div>

    </div>
</div>