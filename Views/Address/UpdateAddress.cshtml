@model AcunMedyaCafe.Entities.Address
@{
    ViewData["Title"] = "UpdateAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Adres Güncelleme Sayfası </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Güncelleme İşlemi</a></li>
                <li class="breadcrumb-item active" aria-current="page">Adres</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="AddressId" class="form-control" />

                        <div class="form-group">
                            <label>Haftaiçi Saatler</label>
                            <input type="text" asp-for="WeekdayHours" class="form-control" />
                            <span asp-validation-for="WeekdayHours" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Haftasonu Saatler</label>
                            <input type="text" asp-for="WeekendHours" class="form-control" />
                            <span asp-validation-for="WeekendHours" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Telefon Numarası</label>
                            <input type="text" asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <button class="btn btn-primary">
                            <i class="fa fa-save"></i> Kaydet
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>