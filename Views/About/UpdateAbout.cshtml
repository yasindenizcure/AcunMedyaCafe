@model AcunMedyaCafe.Entities.About
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Hakkında Güncelleme Sayfası </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Güncelleme İşlemi</a></li>
                <li class="breadcrumb-item active" aria-current="page">Hakkında</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="AboutId" class="form-control" />
                        <label>Alt Başlık</label>
                        <input type="text" asp-for="Subtitle" class="form-control" />
                        <br />
                        <span asp-validation-for="Subtitle" class="text-danger"></span>
                        <label>Başlık</label>
                        <input type="text" asp-for="Title" class="form-control" />
                        <br />
                        <span asp-validation-for="Title" class="text-danger"></span>
                        <label>Ana Başlık</label>
                        <input type="text" asp-for="BoldText" class="form-control" />
                        <br />
                        <span asp-validation-for="BoldText" class="text-danger"></span>
                        <label>Açıklama</label>
                        <input type="text" asp-for="Description" class="form-control" />
                        <br />
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <label>Resim Url</label>
                        <input type="text" asp-for="ImageUrl" class="form-control" />
                        <br />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        <label>Video Url</label>
                        <input type="text" asp-for="VideoUrl" class="form-control" />
                        <br />
                        <span asp-validation-for="VideoUrl" class="text-danger"></span>
                        <button class="btn btn-primary"> <i class="fa fa-save"> </i>  Kaydet </button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>