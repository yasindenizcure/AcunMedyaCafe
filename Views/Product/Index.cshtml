@model List<AcunMedyaCafe.Entities.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Ürün Tablosu </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Tablo</a></li>
                <li class="breadcrumb-item active" aria-current="page">Ürün</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ürün İsmi</th>
                                <th>Ürün Fiyatı</th>
                                <th>Açıklaması</th>
                                <th>Resmi</th>
                                <th>Kategorisi</th>
                                <th>Güncelle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.ProductName</td>
                                    <td>@item.ProductPrice</td>
                                    <td>@item.Description</td>
                                    <td><img src="@item.ImageUrl" style="height:75px; width: 75px" /></td>
                                    <td>@item.Category.CategoryName</td>
                                    <td><a href="/Category/UpdateCategory/@item.CategoryId" class="badge badge-info">Güncelle</a></td>
                                    <td><a href="/Category/DeleteCategory/@item.CategoryId" class="badge badge-danger">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    <a href="/Category/AddCategory" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Yeni Kategori</a>
                </div>
            </div>
        </div>

    </div>
</div>