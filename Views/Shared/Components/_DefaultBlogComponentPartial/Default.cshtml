@model List<AcunMedyaCafe.Entities.Blog>

<section class="blog-area section-gap" id="blog">
	<div class="container">
		<div class="row d-flex justify-content-center">
			<div class="menu-content pb-60 col-lg-10">
				<div class="title text-center">
					<h1 class="mb-10">Kahveyle Dolu Bir Dünya</h1>
					<p>Yeni kampanyalar, lezzetli öneriler ve kahve kültürüne dair her şey sayfamızda.</p>
				</div>
			</div>
		</div>

		<div class="row">
			@foreach (var item in Model)
			{
				<div class="col-lg-6 col-md-6 single-blog">
					<img class="img-fluid" src="@item.ImageUrl" alt="" style="width:450px;height:280px;">
					<ul class="post-tags">
						<li><a href="#">@item.Content</a></li>
					</ul>
					<a href="#"><h4>@item.Title</h4></a>
					<p>@item.Description</p>
					<p class="post-date">
						@item.Date.ToString("dd MMMM yyyy")
					</p>
				</div>
			}
		</div>
	</div>
</section>