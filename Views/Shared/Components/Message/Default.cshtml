@model List<AcunMedyaCafe.Entities.Message>

<h6 class="p-3 mb-0">Mesajlar</h6>
<div class="dropdown-divider"></div>

@if (!Model.Any())
{
    <p class="text-center p-3">Yeni mesaj yok.</p>
}
else
{
    foreach (var message in Model)
    {
        <a class="dropdown-item preview-item">
            <div class="preview-thumbnail">
                <img src="@message.ImageUrl" alt="image" class="profile-pic" />
            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject ellipsis mb-1 font-weight-normal">@message.Title</h6>
                <p class="text-gray mb-0">@message.Date.ToString("dd.MM.yyyy")</p>
            </div>
        </a>
        <div class="dropdown-divider"></div>
    }
    <h6 class="p-3 mb-0 text-center">@Model.Count yeni mesaj!</h6>
}